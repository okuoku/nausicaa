(c? v4)        @result{} #t
(c1? v4)       @result{} #t
(c2? v4)       @result{} #t
(c-x v4)       @result{} "V1"
(c1-a v4)      @result{} "a1"
(c2-b v4)      @result{} "b2"
@end example

@example
