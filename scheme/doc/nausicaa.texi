(string-join '()   ":") @result{} ""
(string-join '("") ":") @result{} ""

(string-join '("") "," 'strict-infix) @result{} ""
(string-join '("") "," 'suffix) @result{} ","
(string-join '("") "," 'prefix) @result{} ","
@end example
@end defun

