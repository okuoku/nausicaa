      p))

  (define (logging-free pointer)
    (display (format "free:\t~s\n" pointer) port)
    (platform-free pointer))

  (parameterize ((primitive-malloc-function logging-malloc)
                 (primitive-free-function logging-free))
    (let ((p (malloc 4096)))
      ---
      (primitive-free p))))
