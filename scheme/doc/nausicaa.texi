  (define (doit . options)
    (let-keywords options #f
                  ((a :a #\a)
                   (b :b #\b)
                   (c :c #\c)
                   (d :d #\d))
      (list a b c d)))

  (doit :a 1 :b 2 :d 4))
@result{} (1 2 #\c 4)
@end example
